<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wia2007.project.tablebooking.SelectTableActivity">

    <TextView
        android:id="@+id/select_table_8peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/stixtwo"
        android:text="@string/eight_people"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_6peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_6peopleText" />

    <TextView
        android:id="@+id/select_table_selectTableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/stixtwo"
        android:text="@string/select_booking_table"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cancel_booking_layoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/select_table_backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#000000"
            android:fontFamily="@font/stixtwo"
            android:text="@string/back_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/select_table_nextButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#C1121F"
            android:fontFamily="@font/stixtwo"
            android:text="@string/next_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/select_table_cancelButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#000000"
            android:fontFamily="@font/stixtwo"
            android:text="@string/cancel_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/select_table_2peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/stixtwo"
        android:text="@string/two_people"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_selectTableText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_selectTableText" />

    <TextView
        android:id="@+id/select_table_4peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/stixtwo"
        android:text="@string/four_people"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_2peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_2peopleText" />

    <TextView
        android:id="@+id/select_table_6peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/stixtwo"
        android:text="@string/six_people"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_4peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_4peopleText" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="269dp"
        android:layout_height="26dp"
        android:layout_marginTop="52dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_table_8peopleSpinner">

        <TextView
            android:id="@+id/select_table_tableSelectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/stixtwo"
            android:text="@string/table_selected"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/select_table_tableSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/stixtwo"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/select_table_2peopleSpinner"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/select_table_2peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_2peopleText" />

    <Spinner
        android:id="@+id/select_table_4peopleSpinner"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/select_table_6peopleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/select_table_4peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_4peopleText"
        app:layout_constraintVertical_bias="0.048" />

    <Spinner
        android:id="@+id/select_table_6peopleSpinner"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/select_table_8peopleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/select_table_6peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_6peopleText"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/select_table_8peopleSpinner"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/select_table_8peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_8peopleText" />

</androidx.constraintlayout.widget.ConstraintLayout>