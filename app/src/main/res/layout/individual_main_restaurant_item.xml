<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2">

        <ImageView
            android:id="@+id/main_all_picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_gravity="start"
            app:layout_constraintWidth_percent="0.3"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="4"
            android:padding="8dp">

            <TextView
                android:id="@+id/main_all_storeName"
                style="?attr/textAppearanceSearchResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/main_all_storeType"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Type" />

            <Button
                android:id="@+id/main_all_BtnBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_btnBooking"
                android:layout_gravity="end"
                />
        </LinearLayout>
    </GridLayout>
</androidx.cardview.widget.CardView>