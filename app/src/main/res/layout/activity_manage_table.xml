<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ManageTable">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarManageTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ManageTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/stylish"
            android:text="ManageTable"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarManageTable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarManageTable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/twoppl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/stylish"
            android:text="2 people table"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarManageTable" />

        <TextView
            android:id="@+id/fourpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/stylish"
            android:text="4 people table"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

        <TextView
            android:id="@+id/sixpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/stylish"
            android:text="6 people table"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3" />

        <TextView
            android:id="@+id/eightpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/stylish"
            android:text="8 people table"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView4" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/stylish"
            android:text="Add Table:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView5" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/stylish"
            android:text="Delete Table:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTablePax" />

        <TextView
            android:id="@+id/addtableNo1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/stylish"
            android:text="Table No. :"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add" />

        <TextView
            android:id="@+id/deletetableNo1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/stylish"
            android:text="Table No. :"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete" />

        <EditText
            android:id="@+id/addTableNo1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/stylish"
            android:inputType="textPersonName"
            android:text="Table no."
            android:textColor="@color/material_dynamic_neutral_variant80"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/addtableNo1"
            app:layout_constraintTop_toBottomOf="@+id/add" />

        <EditText
            android:id="@+id/deleteTableNo1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/stylish"
            android:inputType="textPersonName"
            android:text="Table no."
            android:textColor="@color/material_dynamic_neutral_variant80"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/deletetableNo"
            app:layout_constraintTop_toBottomOf="@+id/delete" />

        <EditText
            android:id="@+id/editTablePax1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/stylish"
            android:inputType="textPersonName"
            android:text="Table Pax"
            android:textColor="@color/material_dynamic_neutral_variant80"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tableSize1"
            app:layout_constraintTop_toBottomOf="@+id/addTableNo1" />

        <TextView
            android:id="@+id/tableSize1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/stylish"
            android:text="Table Pax :"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addtableNo1" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twoppl">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CLayoutSV2"
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/T1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T2"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T3"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T4"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T5"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fourpeople">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CLayoutinSV3"
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/T6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T6"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T7"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T8"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T9"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T10"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T9"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sixpeople">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CLayoutinSV4"
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/T11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T11"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T12"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T11"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T13"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T12"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T14"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T13"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T15"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eightpeople">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CLayoutinSV5"
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/T16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T16"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T17"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T18"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T17"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T19"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T18"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/T20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/stylish"
                    android:text="T20"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/T19"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#C1121F"
            android:text="Save"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/cancelButton"
            app:layout_constraintTop_toBottomOf="@+id/deleteTableNo" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#000000"
            android:text="Cancel"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deleteTableNo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>