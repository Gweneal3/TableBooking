<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookinglistLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingList">

    <ListView
        android:id="@+id/BookingListView"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:layout_width="wrap_content"
        android:layout_height="690dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpinnerSortCondition" />

    <TextView
        android:id="@+id/TVSortBy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="14dp"
        android:gravity="center_vertical"
        android:text="@string/sort_by"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/SpinnerSortCondition"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/SpinnerSortCondition"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/sort_by"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:ignore="DuplicateSpeakableTextCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>