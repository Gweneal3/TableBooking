<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wia2007.project.tablebooking.selectTable">

    <TextView
        android:id="@+id/select_table_8peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/stixtwo"
        android:text="8 people table"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_6peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_6peopleText" />

    <TextView
        android:id="@+id/select_table_selectTableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stixtwo"
        android:text="Select your table(s)"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="34dp" />

    <LinearLayout
        android:id="@+id/select_time_layoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/select_table_backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#000000"
            android:fontFamily="@font/stixtwo"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/select_table_nextButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#C1121F"
            android:fontFamily="@font/stixtwo"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/select_table_cancelButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#000000"
            android:fontFamily="@font/stixtwo"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/select_table_2peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/stixtwo"
        android:text="2 people table"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_selectTableText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_selectTableText" />

    <TextView
        android:id="@+id/select_table_4peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/stixtwo"
        android:text="4 people table"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_2peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_2peopleText" />

    <TextView
        android:id="@+id/select_table_6peopleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/stixtwo"
        android:text="6 people table"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_table_4peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_4peopleText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_table_2people_recylerview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/select_table_4peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_2peopleText"
        app:layout_constraintVertical_bias="0.423"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_table_4people_recylerview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/select_table_6peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_4peopleText"
        tools:layout_editor_absoluteX="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_table_8people_recylerview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/select_table_8peopleText"
        tools:layout_editor_absoluteX="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_table_6people_recylerview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/select_table_8peopleText"
        app:layout_constraintTop_toBottomOf="@+id/select_table_6peopleText"
        app:layout_constraintVertical_bias="0.47"
        tools:layout_editor_absoluteX="4dp" />

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_table_8people_recylerview">

        <TextView
            android:id="@+id/select_table_tableSelectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/stixtwo"
            android:text="Table Selected :"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/select_table_tableSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/stixtwo"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>