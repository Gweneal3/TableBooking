<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/AppBar"
        style="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/NHFMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="wia2007.project.tablebooking.RestaurantMenuFragment"
        tools:layout="@layout/fragment_restaurant_menu"
        app:layout_constraintTop_toBottomOf="@id/AppBar" />

</androidx.constraintlayout.widget.ConstraintLayout>